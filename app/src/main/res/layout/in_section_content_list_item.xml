<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0.5dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/food_image_in_sections"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:src="@drawable/placeholder"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/restaurant_name_in_sections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textColor="#333333"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/food_duration_in_sections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="Within 30 mins"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_name_in_sections"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/restaurant_name_in_sections" />

    <TextView
        android:id="@+id/food_type_in_sections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Food Type"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/restaurant_name_in_sections"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/restaurant_name_in_sections"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_name_in_sections" />

    <TextView
        android:id="@+id/food_rating_in_sections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Rating"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/food_type_in_sections"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/food_type_in_sections"
        app:layout_constraintTop_toBottomOf="@+id/food_type_in_sections" />

    <TextView
        android:id="@+id/delivery_fees_in_sections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="Delivery Fees"
        android:fontFamily="@font/cutive"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/food_rating_in_sections"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/food_rating_in_sections"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_outline_local_offer_24"
        app:layout_constraintEnd_toEndOf="@+id/food_rating_in_sections"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/food_rating_in_sections"
        app:layout_constraintTop_toBottomOf="@+id/food_rating_in_sections" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15% off selected items"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/cutive"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>